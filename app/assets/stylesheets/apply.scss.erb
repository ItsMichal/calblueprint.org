.card-style {
  background-color: white;
  box-shadow: 0 0 5px 2px #ddd;
  border: 1px solid #bbb;
}

.panel {
  top: 0;
  height: 100vh;
  width:100%;
  min-height:500px;
  position: fixed;
  z-index: -1;

  .panel-container-left &, .panel-container-right & {
    width: 50%;
    @media only screen and (max-width: 45em) {
      position: absolute;
      top: initial;
      width: 100%;
    }
  }

  .panel-container-left & {
    float: left;
  }

  .panel-container-right & {
    float: right;
  }
}

.panel-container{
  @extend .panel;
  text-align:center;
  position: static;
  z-index: 0;
}

.panel-container-left, .panel-container-right {
  @extend .panel-container;
  width: 50%;
  
  @media only screen and (max-width: 45em) {
    width: 100%;
  }
}

.panel-container-left {
  float: left;
}

.panel-container-right {
  float: right;
}

.nonprofits-bg {
  @include background-image(
  linear-gradient(
  rgba(150, 150, 150, 0.4),
  rgba(150, 150, 150, 0.4)
  ),
  url(<%= image_path 'apply/nonprofits/nonprofits.jpg' %>));
  background-size:cover;
  left: 0;
}

.students-bg {
  @include background-image(
  linear-gradient(
  rgba(27, 117, 188, 0.4),
  rgba(27, 117, 188, 0.4)
  ),
  url(<%= image_path 'apply/students/students.jpg' %>));
  background-size:cover;
  right: 0;
}

#left-title, #right-title {
    padding-top: 30vh;
}

.subtitle {
    margin: 0 auto;
    width: 75%;
    margin-top: -5px;
    margin-bottom: 10px;
    font-size: 1.5em;
    line-height: 1.5em;
    font-weight: 400;
}

.decision-criteria {
  padding-left:50px;
  p, h4 {
    text-align:left;
  }
}

.blue-block {
  padding: 25px 10px;
  background-color: $blue;
  color:#fff;
  &.text-center {
    text-align:center;
  }
  q {
    color:#fff;
    font-size: 1.8em;
    padding: 0 15px;
  }
  .reference {
    text-align:right;
    padding: 0 10px;
  }
}

.faq {
  p, h4 {
    text-align: left;
  }
}

.white-button {
  @extend button;
  border: 1px solid #fff;
}

.white-bg {
  background-color: white;
}
