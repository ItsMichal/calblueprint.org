.apply-container {
  display: flex;
  flex-flow: row wrap;
  margin: 0;
  width: 100%;
}

.card-style {
  background-color: white;
  box-shadow: 0 0 5px 2px #ddd;
  border: 1px solid #bbb;
}

.panel {
  top: 0;
  width:100vw;
  height:500px;
  position: fixed;
  z-index: -1;
}

.panel-container{
  width:100%;
  margin-top: -48px;
  height: 350px;
  text-align:center;
  position: static;
  z-index: 0;

  .title {
    @extend .h0;
    color: #FFFFFF;
    padding-top: 150px;
  }
}

.panel-left, .panel-right {
  text-align: center;
  width: 50%;
  min-height: 100vh;

  @media only screen and (max-width: $medium-screen) {
    width: 100%;
  }
}

.nonprofits-bg {
  @include background-image(
    linear-gradient(
      rgba(50, 50, 50, 0.4),
      rgba(50, 50, 50, 0.4)
    ),
    image-url('apply/nonprofits/nonprofits.jpg')
  );
  background-size:cover;
}

.students-bg {
  @include background-image(
    linear-gradient(
      rgba(27, 117, 188, 0.4),
      rgba(27, 117, 188, 0.4)
    ),
    image-url('apply/students/students.jpg')
  );
  background-size:cover;
}

#left-title, #right-title {
  padding-top: 30vh;
}

.subtitle {
  margin: 0 auto;
  width: 75%;
  margin-top: -5px;
  margin-bottom: 10px;
  font-size: 1.5em;
  line-height: 1.5em;
  font-weight: 400;
}

#hook {
  text-align: left;
}

#apply-button {
  text-align: center;
}

.submenu {
  list-style:none;
  font-size: 0.9em;
  font-weight: bold;
  text-align: center;

  li {
    display: inline-block;
    padding: 5px 10px;
    margin: 0;
    border-left: 1px solid #AAA;
    border-bottom: 5px solid rgba($blue, 0);
    transition-duration: 0.3s;
    cursor: pointer;

    &:first-child {
      border: none;
    }

    &:hover {
      background-color: #DDDDDD;
      border-bottom: 5px solid rgba($blue, 1);
    }
  }
}

.title-column {
  @extend .large-3;
  @extend .medium-4;
  @extend .small-12;
  @extend .columns;
  text-align: right;

  h1 {
    text-align: right;
  }

  @media only screen and (max-width: $medium-screen) {
    text-align: center;
    h1 {
      text-align: center;
    }
  }
}

.content-column {
  @extend .large-9;
  @extend .medium-8;
  @extend .small-12;
  @extend .columns;
  border-left: 1px solid #CCC;
  text-align: left;
  padding-left: 50px;

  p, h4, h5 {
    text-align: left;
  }

  @media only screen and (max-width: $medium-screen) {
    border: none;
    border-top: 1px solid #CCC;
  }

  .timeline-vertical {
    margin-left: 60px;
  }
}

.quote-block {
  padding: 25px 15px;
  background-color: #E5E5E5;
  border: 1px solid #CCC;

  q {
    font-size: 1.4em;
    padding: 0 15px;
  }

  .reference {
    text-align:right;
    font-style: italic;
    padding: 0 10px;
    margin-top: 10px;
  }
}

.timeline-slim {
  @include timeline-vertical;
  margin: 10px 10px;

  .timeline-content {
    padding: 0;
    margin: 0;
  }
}

#faq {
  h5 {
    cursor: pointer;
    line-height:2.3em;
  }
}

.white-button {
  @extend button;
  border: 1px solid #fff;
}

.white-bg {
  background-color: #FFFFFF;
}

.gray-bg {
  background-color: #ECECEC;
  border-top: 1px solid #CCC;
}
