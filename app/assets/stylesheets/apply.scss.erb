.panel {
  height: 100vh;
  text-align:center;
  width:100%;
  min-height:500px;
}

.nonprofits-bg {
  background:
  -webkit-linear-gradient(
  rgba(255, 255, 255, 0.3),
  rgba(255, 255, 255, 0.3)
  ),
  url(<%= image_path 'apply/nonprofits/nonprofits.jpg' %>);
  background-size:cover;
}

.students-bg {
  background:
  -webkit-linear-gradient(
  rgba(27, 117, 188, 0.3),
  rgba(27, 117, 188, 0.3)
  ),
  url(<%= image_path 'apply/students/students.jpg' %>);
  background-size:cover;
}

#left-panel, #right-panel {
    height: 100vh;
    text-align:center;
    width: 50%;
    @media only screen and (max-width: 45em) {
        width: 100%;
    }
}

#left-panel {
    float: left;
}

#right-panel {
    float: right;
}

#left-title, #right-title {
    padding-top: 30vh;
}

.subtitle {
    margin: 0 auto;
    width: 75%;
    margin-top: -5px;
    margin-bottom: 10px;
    font-size: 1.5em;
    line-height: 1.5em;
    font-weight: 400;
}

.decision-criteria {
  padding-left:50px;
  p, h4 {
    text-align:left;
  }
}

.blue-block {
  padding: 25px 10px;
  background-color: $blue;
  color:#fff;
  &.text-center {
    text-align:center;
  }
  q {
    color:#fff;
    font-size: 1.8em;
    padding: 0 15px;
  }
  .reference {
    text-align:right;
    padding: 0 10px;
  }
}

.faq {
  p, h4 {
    text-align: left;
  }
}

.white-button {
  @extend button;
  border: 1px solid #fff;
}
