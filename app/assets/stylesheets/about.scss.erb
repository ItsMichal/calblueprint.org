.about-banner {
  @extend .banner;
  height: 350px;
  background: url(<%= image_path 'about/about.jpg' %>);
  background-size: cover;
  background-repeat: no-repeat;
  background-position-y: 40%;
}

.about-mission-block {
  @extend .center;
  h1.about-title {
  }
  p.mission {
    font-size: 1.5em;
    margin: 0;
  }
}

.about-detail-block {
  background: $light-gray;
  .about-value {
    @extend .center;
    .icon-wrapper {
      color: $blue;
    }
    p {
      margin: 0;
    }
  }
}

.about-team-block {
  @extend .center;
  ul.team-pictures {
    padding: 0;
    margin: 0;
    li {
      padding-bottom: 30px;
      padding-left: 26px;
      a {
        height: 100%;
        display: inline-block;
        position: relative;
        .member-description {
          position: absolute;
          z-index: 10;
          width: 100%;
          bottom: 0;
          color: transparent;
          //@include transition-ease-all(0.5s);
        }
        &:hover {
          .member-description {
            text-shadow: 0 0 4px #000000;
            color: #FFFFFF;
          }
        }
      }
    }
  }
}

.about-sponsor-block {
  h2.sponsor-title {
    @extend .center;
  }

  ul.sponsor-list {
    padding: 0;
    li.sponsor-item {
      @extend .center;
      padding: 0;
      display: inline-block;
      height: 150px;
      font: 0/0 a;
      &:before {
        content: ' ';
        display: inline-block;
        vertical-align: middle;  /* vertical alignment of the inline element */
        height: 100%;
      }
      a {
        display: inline-block;
        vertical-align: middle;
        font: 16px/1 Arial sans-serif;
        img {
          width: auto;
          max-height: 150px;
        }
      }
    }
  }

}
