          .spacer-small
          p = t ".values.craft"
          .spacer-small
      .medium-1.columns
    .row.culture-small
      .medium-4.medium-offset-1.columns
        .spacer
        .about-value
          .icon-wrapper
            .hover-icon
              = image_tag("about/culture-hover.png", class: "icon-bottom")
              = image_tag("about/culture.png", class: "icon-top")
          .spacer-small
      .medium-6.columns.value-blurb
        .spacer
        .about-value
          .spacer-small
          h2 Culture
          .spacer-small
          p = t ".values.culture"
          .spacer-small
      .medium-1.columns
    .row.culture-medium
      .medium-6.medium-offset-1.columns
        .spacer
        .about-value
          .spacer-small
          h2 Culture
          .spacer-small
          p = t ".values.culture"
          .spacer-small
      .medium-4.columns
        .spacer
        .about-value
          .icon-wrapper
