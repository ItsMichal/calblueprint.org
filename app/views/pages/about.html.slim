    .spacer-about
  .spacer
  #team.about-team-block
    .row
      .small-9.small-centered.columns
        h2.team-title = t ".team.title"
        .spacer-small
        p = t ".team.description"
        p
    .spacer-about
    .row
      .small-12.small-centered.columns
        ul.team-pictures.medium-block-grid-4.small-block-grid-2
          - @members.each do |member|
            li.team-picture-item
              figure.effect-sadie
                a href="javascript:void(0)"
                  = image_tag gravatar_url(member.email)
                  figcaption
                    .member-description
                      .name = member
                      .position = member.member_role
    .spacer-small
    .row
      .small-9.small-centered.columns
        h2.team-title-2 Alumni
    .spacer-about
    .row
      .small-12.small-centered.columns
        ul.team-pictures.medium-block-grid-4.small-block-grid-2
          - @alumni.each do |alumnus|
            li.team-picture-item
              figure.effect-sadie
                a href="javascript:void(0)"
                  = image_tag gravatar_url(alumnus.email)
                  figcaption
                    .member-description
                      .name = alumnus
                      .position = alumnus.member_role
    .spacer-about-bot
