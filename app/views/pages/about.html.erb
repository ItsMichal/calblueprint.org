</div>

<div class="about-mission-block">
  <div class="row">
    <div class="small-10 small-centered columns">
      <div class="spacer-small"></div>
      <p class="mission"><%= t ".mission" %></p>
      <div class="spacer-small"></div>
    </div>
  </div>
</div>

<div class="about-detail-block">
  <div class="row">
    <div class="medium-4 columns">
      <div class="spacer"></div>
      <div class="about-value">
        <div class="icon-wrapper">
          <%= image_tag("about/craft.png") %>
        </div>
        <!-- <h2><%= t ".values.craft.title" %></h2> -->
        <div class="spacer-small"></div>
      </div>
    </div>
    <div class="medium-8 columns">
      <div class="spacer"></div>
      <div class="about-value">
        <div class="spacer"></div>
        <p><%= t ".values.craft.description" %></p>
        <div class="spacer-small"></div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="medium-8 columns">
      <div class="spacer"></div>
      <div class="about-value">
      <div class="spacer"></div>
        <p><%= t ".values.culture.description" %></p>
        <div class="spacer"></div>
      </div>
    </div>
    <div class="medium-4 columns">
      <div class="spacer"></div>
      <div class="about-value">
        <div class="icon-wrapper">
          <%= image_tag("about/culture.png") %>
        </div>
        <!-- <h2><%= t ".values.culture.title" %></h2> -->
        <div class="spacer-small"></div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="medium-4 columns">
      <div class="spacer"></div>
      <div class="about-value">
        <div class="icon-wrapper">
