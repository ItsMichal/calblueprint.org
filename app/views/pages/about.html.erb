        </div>
        <!-- <h2><%= t ".values.heart.title" %></h2> -->
        <div class="spacer-small"></div>
      </div>
    </div>
    <div class="medium-8 columns">
      <div class="spacer"></div>
      <div class="about-value">
        <div class="spacer"></div>
        <p><%= t ".values.heart.description" %></p>
        <div class="spacer-small"></div>
      </div>
    </div>
  </div>
  <div class="spacer"></div>
</div>

<div class="spacer"></div>

<div class="about-team-block">
  <div class="row">
    <div class="small-9 small-centered columns">
      <h2 class="team-title"><%= t ".team.title" %></h2>
      <div class="spacer"></div>
      <p><%= t ".team.description" %><p>
    </div>
  </div>
  <div class="spacer-small"></div>
  <div class="row">
    <div class="small-12 small-centered columns">
      <ul class="team-pictures medium-block-grid-4 small-block-grid-2">
        <% (1..28).each do |i| %>
          <li class="team-picture-item">
          <a href="#">
          <%= image_tag("about/wonjun.jpg") %>
          <div class="member-description">
            <div class="name">
              WONJUN JEONG
            </div>
            <div class="position">
              President
            </div>
          </div>
        </a>
        </li>
      <% end %>
      </ul>
    </div>
  </div>
</div>

