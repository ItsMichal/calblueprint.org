.gray-bg
  .spacer
  .banner
    .banner-text
      h1 Log In
      p.subtitle Let's get started.
  .spacer-small
  .row
    .medium-6.medium-centered.columns.center
      = link_to omniauth_authorize_path(:applicant, :facebook), class: "button fb-authorize-button" do
        = fa_icon "facebook", class: "fb-authorize-icon authorize-icon", text: "Log in with Facebook"
      .spacer-small
      = link_to omniauth_authorize_path(:applicant, :google_oauth2), class: "button google-authorize-button" do
        = fa_icon "google", class: "google-authorize-icon authorize-icon", text: "Log in with Google"
      .spacer
      .gear-img
  .spacer
  .spacer
