<%= simple_form_for [:admin, @settings], url: admin_settings_path do |f| %>
  <%= f.collection_select :current_semester_id, Semester.order(:year), :id, :season_with_year, include_blank: true %>
  <%= f.input :npo_app_open, label: 'NPO Application Status', collection: [ ['Open', 'Open' ], ['Closed', 'Closed'] ], as: :radio_buttons, label_method: :last, value_method: :first, checked: @settings.npo_app_open, item_wrapper_class: 'inline'%>
  <%= f.input :student_app_open, label: 'Student Application Status', collection: [ ['Open', 'Open' ], ['Closed', 'Closed'] ], as: :radio_buttons, label_method: :last, value_method: :first, checked: @settings.student_app_open, item_wrapper_class: 'inline'%>
  <%= f.submit %>
<% end %>
