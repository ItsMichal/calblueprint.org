<div class="banner">
  <div class="banner-text">
    <h1 class="h0">Semesters</h1>
    <p class="subtitle">
      Cheers to more Blueprint semesters!
    </p>
  </div>
</div>

<div class="row">
  <div class="small-12 small-centered columns">
    <%= link_to "New Semester", new_admin_semester_path, class: "button" %>
    <table class="tables">
      <thead>
        <tr>
          <th>Season</th>
          <th>Year</th>
          <th>Actions</th>
          <th>Semester</th>
        </tr>
      </thead>
      <tbody>
        <% @semesters.each do |semester| %>
        <tr>
          <td><%= semester.season %></td>
          <td><%= semester.year %></td>
          <td><%= link_to "", admin_semester_path(semester), class: 'fa fa-eye button' %>
          <%= link_to "", edit_admin_semester_path(semester), class: 'fa fa-pencil button',
              id: dom_id(semester, :edit) %>
          <%= link_to "", admin_semester_path(semester), method: :delete, class: 'fa fa-trash-o button',
              id: dom_id(semester, :delete) %></td>
          <td><%= link_to "Set as Current Semester",
              set_current_semester_admin_settings_path(current_semester_id: semester.id),
              method: :post,
              class: 'button',
              id: dom_id(semester, :set_as_current) %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <div class="spacer"></div>
  </div>
</div>
