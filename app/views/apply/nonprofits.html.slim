= render "header", className: "nav-white", animate: true

section.static-page-hero.npo-apply-hero
  .static-hero-gradient
  .container
    h1.static-page-title.marginBot-xl
      = t ".headline"
    p.static-page-subtitle.light
      = t ".subtitle"
    .static-page-hero-btn-container.marginTop-xl
      - if @settings.npo_app_open
        - if current_nonprofit
          = link_to "View Dashboard", nonprofit_applications_path, class: "bp-btn btn-white btn-lg"
        - else
          = link_to "Nonprofit Signup", new_nonprofit_registration_path, class: "bp-btn btn-white btn-lg marginRight-sm"
          = link_to "Nonprofit Login", new_nonprofit_session_path, class: "bp-btn btn-white--clear btn-lg"

      - else
        - if @settings.cs169_app_open
          p.hero-desc = raw t ".cs169_hook"
          = link_to "Apply to CS169", new_nonprofit_application_path(cs169: true), class: "bp-btn btn-white btn-lg"
        - else
          .applications-closed
            p.hero-desc = t ".applications_closed"
            = render "newsletter_subscribe", list_id: "NONPROFIT_LIST_ID"

  div.page-nav
    .container
      ul
        li.page-nav-link section-name="our-services"
          | Our Services
        li.page-nav-link section-name="application-process"
          | Application Process
        li.page-nav-link section-name="previous-work"
          | Previous Work
        li.page-nav-link section-name="faqs"
          | FAQs

section.application-our-services#our-services
  .container
    h2.static-page-header.marginBot-xxl Our Services
    .our-services-container
      .item
        .img-container: img src=image_url("apply/nonprofits/web.png") alt=""/
        h3 Web Development
        p = t ".services.web_application_development"
      .item
        .img-container: img src=image_url("apply/nonprofits/mobile.png") alt=""/
        h3 Mobile Development
        p = t ".services.mobile_application_development"

section.application-process-section#application-process
  .container
    h2.static-page-header.marginBot-xxl Nonprofit Application Process
    .npo-timeline
      .timeline-row
        .num-col
          .timeline-num 01
        .text-col
          .timeline-row-title Application Open
          .timeline-row-date June 21
          .timeline-row-description
            = t ".application_timeline.submission"

      .timeline-row
        .num-col
          .timeline-num 02
        .text-col
          .timeline-row-title Submission Deadline
          .timeline-row-date Sept 4
          .timeline-row-description
            = t ".application_timeline.first_round"

      .timeline-row
        .num-col
          .timeline-num 03
        .text-col
          .timeline-row-title Interviews
          .timeline-row-date Sept 9
          .timeline-row-description
            = t ".application_timeline.interviews"

      .timeline-row
        .num-col
          .timeline-num 04
        .text-col
          .timeline-row-title Final Decisions
          .timeline-row-date Sept 12
          .timeline-row-description
            = t ".application_timeline.final_decisions"

section.application-decision-criteria-section
  .container
    h2.static-page-header.marginBot-lg Decision Criteria
    p.static-page-desc.marginBot-xxl = t ".decision_criteria.description"

    ul.decision-criteria-list-container
      li.decision-criteria-item
        h3 Impact
        p How much will your project impact the community?
      li.decision-criteria-item
        h3 Necessity
        p How vital is your project to your non-profit organization?
      li.decision-criteria-item
        h3 Scope
        p Is your project achievable within the alloted timeline?
      li.decision-criteria-item
        h3 Technical Fit
        p Does your project use the capabilities of technology? For example, an application to manage a classroom is more interesting than a website redesign.
      li.decision-criteria-item
        h3 Credibility
        p Is there evidence that your project will have an impact?

section.npo-apply-quote
  .container
    q = t ".quote.text"
    h5.reference = t ".quote.reference"

section.npo-apply-previous-work-section#previous-work
  .container
    h2.static-page-header.marginBot-lg Previous Work
    p.static-page-desc.marginBot-lg Some of the applications we've developed for previous clients.
    = link_to projects_path, class: "homepage-link marginBot-xl"
      | View All Projects
      span.fa.fa-angle-right
    .projects-container
      = link_to project_path("Lava Mae", :current => true)
        .project-item#lavamae
          .project-img.img-container: img src=image_url("home/lavamae.jpg") alt="" /
          h4 Lava Mae
          p Bringing humanity and collaboration through services for the homeless.
      = link_to project_path("Re-Plate", :current => true)
        .project-item#replate
          .project-img.img-container: img src=image_url("home/replate.jpg") alt="" /
          h4 Replate
          p Reducing food waste and hunger in the community.
      = link_to project_path("Roots of Success", :current => true)
        .project-item#roots
          .project-img.img-container: img src=image_url("home/roots.jpg") alt="" /
          h4 Roots of Success
          p Improving opportunities for people from underserved communities

section.application-faqs-section#faqs
  .container
    h2.static-page-header.marginBot-xl Frequently Asked Questions
    h3 = t ".faq.q1.question"
    p = t ".faq.q1.answer"
    h3 = t ".faq.q2.question"
    p = t ".faq.q2.answer"
    h3 = t ".faq.q3.question"
    p = t ".faq.q3.answer"

section.application-newsletter
  .container
    h2.static-page-header.marginBot-md Get Involved
    p.static-page-desc.marginBot-lg = t ".newsletter"
    = render "newsletter_subscribe", list_id: "NEWSLETTER_LIST_ID"
